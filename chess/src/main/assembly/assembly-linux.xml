<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>release-linux</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>

    <files>
        <file>
            <source>${project.build.directory}/${project.build.finalName}.${project.packaging}</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>target/classes</directory>
            <outputDirectory>info</outputDirectory>
            <includes>
                <include>version.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/sprites</directory>
            <outputDirectory>sprites</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/sfx</directory>
            <outputDirectory>sfx</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/music</directory>
            <outputDirectory>music</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>icon16x16.png</include>
                <include>icon32x32.png</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/natives</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.so</include>
                <include>*.jnilib</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/main/scripts</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
            <excludes>
                <exclude>*:natives-*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>